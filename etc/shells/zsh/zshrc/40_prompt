if [[ "$TERM" == "dumb" ]]
then
  unsetopt zle
  unsetopt prompt_cr
  unsetopt prompt_subst
  unfunction precmd
  unfunction preexec
  PS1='$ '
  RPS1=
fi
# If running interactively, then:
if [[ -n "$PS1" ]] && [[ "$TERM" != "dumb" ]];
then
    function is_hg_root() {
        local root="$(pwd -P)"
        while [ $root ] && [ ! -d $root/.hg ]
        do
            root="${root%/*}"
        done
        if [ "$root" ]; then
            return 0
        else
            return 1
        fi
    }
    autoload -Uz vcs_info
    zstyle ':vcs_info:*' check-for-changes  true
    # The %F{n} enable ANSI color n for foreground, and %f disables
    # foreground color
    zstyle ':vcs_info:*' stagedstr 'S'
    zstyle ':vcs_info:*' unstagedstr 'D'
    zstyle ':vcs_info:*' actionformats \
           "%F{6}[${VCSH_REPO_NAME}${VCSH_REPO_NAME:+|}%b%F{2}|%F{1}%a%F{5}]_%c%u%f" \
           '%F{1}%F{5}(%f%s%F{5})%F{1}%r%f|%F{2}%S%f%m'
    zstyle ':vcs_info:*' formats \
           "%F{6}[${VCSH_REPO_NAME}${VCSH_REPO_NAME:+|}%b]_%c%u%f" \
           '%F{1}%F{5}(%f%s%F{5})%F{1}%r%f|%F{2}%S%f%m'
    zstyle ':vcs_info:(sv[nk]|bzr):*' branchformat '%b%F{1}:%F{3}%r'
    zstyle ':vcs_info:*' enable git cvs hg
    zstyle ':vcs_info:*' nvcsformats  "_"  "%f%1~"
    precmd () {
        vcs_info
        tracked=''
        if [[ $(git rev-parse --is-inside-work-tree 2> /dev/null) == 'true' ]] &&
           git status --porcelain | grep '??' &> /dev/null ; then
            #[[ -n $(git ls-files --others --exclude-standard) ]] ; then
            tracked="U"
        elif is_hg_root && ! $(hg summary | grep -q 'commit: (clean)' &> /dev/null) ; then
            tracked="U"
        fi
    }
    autoload -U promptinit
    promptinit
    prompt manoj
else
  unsetopt zle
  unsetopt prompt_cr
  unsetopt prompt_subst
  unfunction precmd
  unfunction preexec
  PS1='$ '
  RPS1=
fi

# Local Variables:
# comment-start: "#"
# tab-width: 2
# mode: sh
# End:
