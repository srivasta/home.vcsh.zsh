if [[ -n "$PS1" ]]; then
    # Set the terminal type
    autoload -U sterm && sterm
    set noglob; eval `resize`; unset noglob; reset
    case "$MY_SYS_TYPE" in
        hppa1.1-hp-hpux*)
            stty intr ^c
           ;;
        mips-dec-ultrix*)
            ;;
        alpha-dec-osf*)
            if test "$TERM" = "xterm" ; then
                if test -x /usr/bin/stty -a -f "$default_dir/etc/stty" ; then
                    /usr/bin/stty `cat "$default_dir/etc/stty"` >& /dev/null
                fi
            else
                stty intr ^c
            fi
            ;;
        *)
            ;;
    esac
fi

if [ "$TERM" = "xterm" ] || [ "$TERM" = "xterm-256color" ] ||
    [ "$TERM" = "linux" ]; then
    export COLORTERM=y
    if [[ -r $HOME/etc/dir_colors ]]; then
        check_com -c dircolors && eval $(dircolors -b $HOME/etc/dir_colors);
    fi    
fi

