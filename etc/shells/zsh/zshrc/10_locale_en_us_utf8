if [[ -z "$LANG" ]] ; then
    if [[ -r /etc/default/locale ]]; then
        source "/etc/default/locale"
    fi
fi

export LC_CTYPE=${LANG:-en_US.UTF-8}
export LC_NUMERIC=${LANG:-en_US.UTF-8}
export LC_TIME=${LANG:-en_US.UTF-8}
export LC_MONETARY=${LANG:-en_US.UTF-8}
export LC_MESSAGES=${LANG:-en_US.UTF-8}
export LC_PAPER=${LANG:-en_US.UTF-8}
export LC_NAME=${LANG:-en_US.UTF-8}
export LC_ADDRESS=${LANG:-en_US.UTF-8}
export LC_TELEPHONE=${LANG:-en_US.UTF-8}
export LC_MEASUREMENT=${LANG:-en_US.UTF-8}
export LC_IDENTIFICATION=${LANG:-en_US.UTF-8}
export LC_ALL=${LANG:-en_US.UTF-8}        

export LC_COLLATE=${LC_COLLATE:-POSIX}


