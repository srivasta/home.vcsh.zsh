if [[ -n "$DISPLAY" ]]; then
    export X_AUTHORITY=$default_dir/.Xauthority
    export LINK_TIMEOUT=0
    export XAPPLRESLANGPATH=$HOME/lib/X11/app-defaults/%N:/usr/lib/X11/%L/app-defaults/%N:/usr/lib/X11/app-defaults/%N
    export XUSERFILESEARCHPATH=$HOME/lib/X11/app-defaults/%N%C:$HOME/lib/X11/app-defaults/%N
fi

